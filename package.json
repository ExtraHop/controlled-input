{
    "name": "controlled-input",
    "version": "0.9.0-beta.1",
    "description": "Lean, composable React input library",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "author": "Ted Driggs <t.driggs@extrahop.com>",
    "license": "BSD-2",
    "scripts": {
        "build": "./node_modules/typescript/bin/tsc",
        "tslint:allHasErrors": "FILE='src/**/*.+(ts|tsx)' npm run tslint:hasErrors",
        "tslint:fixAll": "FILE='src/**/*.+(ts|tsx)' npm run tslint:fix",
