        "tslint:hasErrors": "tslint --project tsconfig.json $FILE",
        "watch": "./node_modules/typescript/bin/tsc --watch"
    },
    "dependencies": {
        "lodash-es": "^4.17.15",
        "react": "^16.10.2",
        "typescript": "3.6.3"
    },
    "devDependencies": {
        "@types/lodash-es": "^4.17.3",
        "@types/node": "^12.7.5",
        "@types/react": "16.9.5",
        "tslint": "5.20.0"
    }
}
